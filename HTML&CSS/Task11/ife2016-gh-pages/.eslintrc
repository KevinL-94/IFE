{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [
      "html"
    ],
    "rules": {
        "indent": [
            2,
            2
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "never"
        ],
        "comma-dangle": [
          2,
          "only-multiline"
        ],
        "no-console": [
          1,
          { "allow": ["warn", "error"] }
        ],
        "no-unused-vars": [
          1
        ],
        "no-undef": [
          0
        ]
    }
}
